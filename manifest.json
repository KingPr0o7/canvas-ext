{

  "description": "Improves the UX for all students using Canvas with custom themes, lots of settings, and more.",
  "manifest_version": 2,
  "name": "Canvas+",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/apply-css",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
	"default_icon": "icons/icon.png",
	"browser_style": true,
	"default_title": "Canvas+",
	"default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ]

}
